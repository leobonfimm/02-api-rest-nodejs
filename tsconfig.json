{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",

    /* Modules */
    "module": "commonjs",
    
    /* Emit */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    "types": ["vitest/globals"],
    
    /* Completeness */
    "skipLibCheck": true
  }
}